    ViewData["Title"] = "Excluir Avaliação";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-custom border-danger">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Confirmar Exclusão</h3>
            </div>
