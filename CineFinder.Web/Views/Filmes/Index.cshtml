@model IEnumerable<CineFinder.ViewModels.FilmeViewModel>

    @{
    ViewData["Title"] = "Filmes";
    }

    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-5 fw-bold">
                <i class="fas fa-film text-danger"></i> Catálogo de Filmes
            </h1>
            <p class="lead text-muted">Explore nossa coleção de filmes</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Criar" class="btn btn-danger btn-lg">
                <i class="fas fa-plus me-2"></i>Adicionar Filme
            </a>
            <a asp-action="Buscar" class="btn btn-outline-secondary btn-lg">
                <i class="fas fa-search me-2"></i>Buscar
            </a>
        </div>
    </div>

    @if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        Nenhum filme cadastrado. <a asp-action="Criar">Clique aqui</a> para adicionar o primeiro filme.
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var filme in Model)
        {
        <div class="col-md-3">
            <div class="card card-custom h-100">
                @if (!string.IsNullOrEmpty(filme.PosterUrl))
                    {
                <img src="@filme.PosterUrl" class="card-img-top" alt="@filme.Titulo" style="height: 400px; object-fit: cover;">
                    }
                    else
                    {
                <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 400px;">
                    <i class="fas fa-film fa-5x text-white opacity-25"></i>
                </div>
                    }
                <div class="card-body">
                    <h5 class="card-title">@filme.Titulo</h5>
                    <p class="card-text text-muted small">
                        @if (filme.DataLancamento.HasValue)
                            {
                        @filme.DataLancamento.Value.Year
                            }
                        @if (!string.IsNullOrEmpty(filme.Diretor))
                            {
                        <span> • @filme.Diretor</span>
                            }
                    </p>
                    @if (filme.NotaMedia.HasValue)
                        {
                    <div class="mb-2">
                        <span class="badge badge-custom">
                            <i class="fas fa-star"></i> @filme.NotaMedia.Value.ToString("N1")
                        </span>
                        <small class="text-muted">(@filme.TotalAvaliacoes avaliações)</small>
                    </div>
                        }
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-grid gap-2">
                        <a asp-action="Detalhes" asp-route-id="@filme.Id" class="btn btn-outline-danger btn-sm">
                            <i class="fas fa-eye me-1"></i>Ver Detalhes
                        </a>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
}
