@model CineFinder.ViewModels.FilmeEditViewModel
@{
    ViewData["Title"] = "Editar Filme";
    var generos = ViewBag.Generos as List<CineFinder.ViewModels.GeneroViewModel>;
}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-custom">
            <div class="card-header">
                <h3 class="mb-0"><i class="fas fa-edit"></i> Editar Filme</h3>
            </div>
            <div class="card-body">
                <form asp-action="Editar" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="mb-3">
                        <label asp-for="Titulo" class="form-label"></label>
                        <input asp-for="Titulo" class="form-control" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Descricao" class="form-label"></label>
                        <textarea asp-for="Descricao" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Diretor" class="form-label"></label>
                            <input asp-for="Diretor" class="form-control" />
                            <span asp-validation-for="Diretor" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="DataLancamento" class="form-label"></label>
                            <input asp-for="DataLancamento" class="form-control" type="date" />
                            <span asp-validation-for="DataLancamento" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Duracao" class="form-label"></label>
                            <input asp-for="Duracao" class="form-control" type="number" />
                            <span asp-validation-for="Duracao" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="TmdbId" class="form-label"></label>
                            <input asp-for="TmdbId" class="form-control" type="number" />
                            <span asp-validation-for="TmdbId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PosterUrl" class="form-label"></label>
                            <input asp-for="PosterUrl" class="form-control" />
                            <span asp-validation-for="PosterUrl" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="TrailerUrl" class="form-label"></label>
                            <input asp-for="TrailerUrl" class="form-control" />
                            <span asp-validation-for="TrailerUrl" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="GenerosIds" class="form-label"></label>
                        @if (generos != null && generos.Any())
                        {
                            <div class="row">
                                @foreach (var genero in generos)
                                {
                                    <div class="col-md-4 mb-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="GenerosIds" value="@genero.Id" id="genero_@genero.Id" 
                                                   @(Model.GenerosIds != null && Model.GenerosIds.Contains(genero.Id) ? "checked" : "") />
                                            <label class="form-check-label" for="genero_@genero.Id">
                                                @genero.Nome
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">Nenhum gênero disponível. <a asp-controller="Generos" asp-action="Criar">Criar gênero</a></p>
                        }
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-danger">Salvar Altera��es</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}