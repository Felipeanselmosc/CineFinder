@model CineFinder.ViewModels.GeneroViewModel

@{
    ViewData["Title"] = Model.Nome;
    var filmes = ViewBag.Filmes as List<CineFinder.ViewModels.FilmeViewModel>;
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-4 fw-bold">
            <i class="fas fa-tag text-danger"></i> @Model.Nome
        </h1>
        @if (!string.IsNullOrEmpty(Model.Descricao))
        {
        <p class="lead text-muted">@Model.Descricao</p>
        }
        <p class="text-muted">
            <i class="fas fa-film"></i> @Model.TotalFilmes filmes neste gênero
        </p>
    </div>
</div>

<div class="mb-4">
    <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning">
        <i class="fas fa-edit"></i> Editar
    </a>
    <a asp-action="Excluir" asp-route-id="@Model.Id" class="btn btn-danger">
        <i class="fas fa-trash"></i> Excluir
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Voltar
    </a>
</div>

<hr class="my-5">

<h3 class="mb-4"><i class="fas fa-film"></i> Filmes deste Gênero</h3>

@if (filmes != null && filmes.Any())
{
<div class="row g-4">
    @foreach (var filme in filmes)
        {
    <div class="col-md-3">
        <div class="card card-custom h-100">
            @if (!string.IsNullOrEmpty(filme.PosterUrl))
                    {
            <img src="@filme.PosterUrl" class="card-img-top" alt="@filme.Titulo" style="height: 400px; object-fit: cover;">
                    }
                    else
                    {
            <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 400px;">
                <i class="fas fa-film fa-5x text-white opacity-25"></i>
            </div>
                    }
            <div class="card-body">
                <h5 class="card-title">@filme.Titulo</h5>
                <p class="card-text text-muted small">
                    @if (filme.DataLancamento.HasValue)
                            {
                    @filme.DataLancamento.Value.Year
                            }
                </p>
            </div>
            <div class="card-footer bg-transparent">
                <a asp-controller="Filmes" asp-action="Detalhes" asp-route-id="@filme.Id" class="btn btn-outline-danger btn-sm w-100">
                    <i class="fas fa-eye"></i> Ver Detalhes
                </a>
            </div>
        </div>
    </div>
        }
</div>
}
else
{
<div class="alert alert-info">
    <i class="fas fa-info-circle"></i> Ainda não há filmes cadastrados neste gênero.
</div>
}
