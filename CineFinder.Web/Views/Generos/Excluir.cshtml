@model CineFinder.ViewModels.GeneroViewModel

@{
    ViewData["Title"] = "Excluir Gênero";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-custom border-danger">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Confirmar Exclusão</h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-info-circle"></i> Tem certeza que deseja excluir este gênero?
                </div>

                <div class="text-center mb-4">
                    <i class="fas fa-tag fa-5x text-danger mb-3"></i>
                    <h4>@Model.Nome</h4>
                    @if (!string.IsNullOrEmpty(Model.Descricao))
                    {
                        <p class="text-muted">@Model.Descricao</p>
                    }
                    <p class="text-danger">
                        <i class="fas fa-film"></i> @Model.TotalFilmes filmes associados
                    </p>
                </div>

                @if (Model.TotalFilmes > 0)
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Atenção:</strong> Este gênero possui filmes associados. A exclusão pode afetar esses registros.
                    </div>
                }

                <form asp-action="Excluir" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Sim, Excluir
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
