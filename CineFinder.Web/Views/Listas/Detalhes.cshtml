@model CineFinder.ViewModels.ListaViewModel

@{
    ViewData["Title"] = Model.Nome;
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="display-4 fw-bold">
            <i class="fas fa-list"></i> @Model.Nome
        </h1>
        @if (!string.IsNullOrEmpty(Model.Descricao))
        {
            <p class="lead text-muted">@Model.Descricao</p>
        }
        <p class="text-muted">
            <i class="fas fa-user"></i> @Model.NomeUsuario em
            <i class="fas fa-calendar"></i> @Model.DataCriacao.ToString("dd/MM/yyyy") -
            <i class="fas fa-film"></i> @Model.TotalFilmes filmes
        </p>
        @if (Model.IsPublica)
        {
            <span class="badge bg-success"><i class="fas fa-globe"></i> Lista Pública</span>
        }
        else
        {
            <span class="badge bg-secondary"><i class="fas fa-lock"></i> Lista Privada</span>
        }
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="AdicionarFilme" asp-route-id="@Model.Id" class="btn btn-success">
            <i class="fas fa-plus"></i> Adicionar Filme
        </a>
    </div>
</div>

<div class="mb-4">
    <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning">
        <i class="fas fa-edit"></i> Editar
    </a>
    <a asp-action="Excluir" asp-route-id="@Model.Id" class="btn btn-danger">
        <i class="fas fa-trash"></i> Excluir
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Voltar
    </a>
</div>

<hr class="my-5">

<h3 class="mb-4"><i class="fas fa-film"></i> Filmes da Lista</h3>

@if (Model.Filmes != null && Model.Filmes.Any())
{
    <div class="row g-4">
        @foreach (var filme in Model.Filmes)
        {
            <div class="col-md-3">
                <div class="card card-custom h-100">
                    @if (!string.IsNullOrEmpty(filme.PosterUrl))
                    {
                        <img src="@filme.PosterUrl" class="card-img-top" alt="@filme.Titulo" style="height: 400px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 400px;">
                            <i class="fas fa-film fa-5x text-white opacity-25"></i>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@filme.Titulo</h5>
                        <p class="card-text text-muted small">
                            @if (filme.DataLancamento.HasValue)
                            {
                                @filme.DataLancamento.Value.Year
                            }
                            @if (!string.IsNullOrEmpty(filme.Diretor))
                            {
                                <span> - @filme.Diretor</span>
                            }
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex gap-2">
                            <a asp-controller="Filmes" asp-action="Detalhes" asp-route-id="@filme.Id" class="btn btn-outline-danger btn-sm flex-grow-1">
                                <i class="fas fa-eye"></i> Ver
                            </a>
                            <form asp-action="RemoverFilme" method="post" class="d-inline">
                                <input type="hidden" name="listaId" value="@Model.Id" />
                                <input type="hidden" name="filmeId" value="@filme.Id" />
                                <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Remover este filme da lista?');">
                                    <i class="fas fa-times"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Esta lista ainda não possui filmes.
        <a asp-action="AdicionarFilme" asp-route-id="@Model.Id">Clique aqui</a> para adicionar.
    </div>
}
