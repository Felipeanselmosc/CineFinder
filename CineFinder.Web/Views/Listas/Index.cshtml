@model IEnumerable<CineFinder.ViewModels.ListaViewModel>

    @{
    ViewData["Title"] = "Listas";
    }

    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-5 fw-bold">
                <i class="fas fa-th-list text-danger"></i> Listas de Filmes
            </h1>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Criar" class="btn btn-danger btn-lg">
                <i class="fas fa-plus me-2"></i>Nova Lista
            </a>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var lista in Model)
    {
        <div class="col-md-6">
            <div class="card card-custom h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@lista.Nome</h5>
                    @if (lista.IsPublica)
                    {
                    <span class="badge bg-success"><i class="fas fa-globe"></i> Pública</span>
                    }
                    else
                    {
                    <span class="badge bg-secondary"><i class="fas fa-lock"></i> Privada</span>
                    }
                </div>
                <div class="card-body">
                    <p class="card-text">@lista.Descricao</p>
                    <p class="text-muted small">
                        <i class="fas fa-user"></i> @lista.NomeUsuario •
                        <i class="fas fa-film"></i> @lista.TotalFilmes filmes
                    </p>
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-action="Detalhes" asp-route-id="@lista.Id" class="btn btn-outline-danger btn-sm">
                        <i class="fas fa-eye"></i> Ver Lista
                    </a>
                    <a asp-action="Editar" asp-route-id="@lista.Id" class="btn btn-outline-warning btn-sm">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                </div>
            </div>
        </div>
    }
    </div>
